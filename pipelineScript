pipeline{
  agent any
 environment {
  NumberOfUsers = "50"
  RampUP= "2"
  Duration= "60"
  jmeterVersion="5.2"
  user='vfilchakov'
  jmeterBinPath='/var/lib/jenkins/workspace/jmeterFloodio/apache-jmeter-5.2/bin'
  // /var/lib/jenkins/workspace/jmeterFloodio
  // path-for-save='/'
}
  stages{
    stage('Preparation'){
    steps{
      sh 'pwd'
      echo 'Install Jmeter'
      sh 'wget http://apache.ip-connect.vn.ua//jmeter/binaries/apache-jmeter-5.2.tgz'
      sh 'ls /var/lib/jenkins/workspace/jmeterFloodio'
      sh 'tar -xf apache-jmeter-5.2.tgz'
      sh 'ls /var/lib/jenkins/workspace/jmeterFloodio'
      echo '"Connect to Git"'
      // git  branch: '/task1', url: 'https://github.com/FilchakovVitaliy/floodio'
      git branch: 'task1', url: 'https://github.com/FilchakovVitaliy/floodio'
      sh 'ls /var/lib/jenkins/workspace/jmeterFloodio'
    }
    }
  
    stage("Run Tests"){
    steps{
      echo 'Running'
      sh '''${jmeterBinPath}/jmeter -n -t /var/lib/jenkins/workspace/jmeterFloodio/floodio.jmx -Jusers=${NumberOfUsers} -JrampUp=${RampUP} -Jdiration=${Duration}'''
    }
    }
  }
  post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
        }
}
}