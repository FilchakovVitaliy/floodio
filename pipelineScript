pipeline{
  agent any
  parameters {
  string defaultValue: '1', description: 'number of users in scenario', name: 'NumberUsers', trim: false
  string defaultValue: '1', description: 'rampUp in scenario', name: 'RampUp', trim: false
  string defaultValue: '1', description: 'duration of scenario', name: 'Duration', trim: false
}
 environment {
  jmeterBinPath= 'apache-jmeter-5.2/bin'
}

  stages{
    stage('Preparation'){
    steps{
      sh 'pwd'
      echo 'Install Jmeter'
      sh 'wget http://apache.ip-connect.vn.ua//jmeter/binaries/apache-jmeter-5.2.tgz' 
      sh 'ls'
      sh 'tar -xf apache-jmeter-5.2.tgz'
      sh 'ls'
      echo '"Connect to Git"'
      git branch: 'task1', url: 'https://github.com/FilchakovVitaliy/floodio'
      sh 'ls'
    }
    }
  
    stage("Run Tests"){
    steps{
      echo 'Running'
      sh '''${WORKSPACE}/${jmeterBinPath}/jmeter -n -t ${WORKSPACE}/floodio.jmx -Jusers=${params.NumberUsers} -JrampUp=${params.RampUp} -Jdiration=${params.Duration}'''
    }
    }
  }
  post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
            sh 'ls'
        }
}
}