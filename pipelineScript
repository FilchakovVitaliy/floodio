pipeline{
  agent any
 environment {
  jmeterVersion="5.2"
  user='vfilchakov'
  jmeterBinPath= 'apache-jmeter-${jmeterVersion}/bin'
}
  stages{
    stage('Preparation'){
    steps{
      sh 'pwd'
      echo 'Install Jmeter'
      sh 'wget http://apache.ip-connect.vn.ua//jmeter/binaries/apache-jmeter-${jmeterVersion}.tgz' 
      sh 'ls'
      sh 'tar -xf apache-jmeter-${jmeterVersion}.tgz'
      sh 'ls'
      echo '"Connect to Git"'
      git branch: 'task1', url: 'https://github.com/FilchakovVitaliy/floodio'
      sh 'ls'
    }
    }
  
    stage("Run Tests"){
    steps{
      echo 'Running'
      sh '''${WORKSPACE}/${jmeterBinPath}/jmeter -n -t ${WORKSPACE}/floodio.jmx -Jusers=${NumberUsers} -JrampUp=${RampUp} -Jdiration=${Duration}'''
    }
    }
  }
  post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
            sh 'ls'
        }
}
}