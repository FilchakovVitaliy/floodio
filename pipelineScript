pipeline{
  agent any
 environment {
  NumberOfUsersp = "50"
  RampUPp= "2"
  Durationp= "60"
  jmeterVersion="5.2"
  user='vfilchakov'
  jmeterBinPath= 'apache-jmeter-5.2/bin'
}
  stages{
    stage('Preparation'){
    steps{
      sh 'pwd'
      echo 'Install Jmeter'
      sh 'wget http://apache.ip-connect.vn.ua//jmeter/binaries/apache-jmeter-5.2.tgz' 
      sh 'ls'
      sh 'tar -xf apache-jmeter-5.2.tgz'
      sh 'ls'
      echo '"Connect to Git"'
      git branch: 'task1', url: 'https://github.com/FilchakovVitaliy/floodio'
      sh 'ls'
    }
    }
  
    stage("Run Tests"){
    steps{
      echo 'Running'
      echo '${NumberUsers}'
     echo '${RampUp}'
      sh '''${WORKSPACE}/${jmeterBinPath}/jmeter -n -t ${WORKSPACE}/floodio.jmx -Jusers=${NumberOfUsersp} -JrampUp=${RampUPp} -Jdiration=${Durationp}'''
    }
    }
  }
  post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
            sh 'ls'
        }
}
}